<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:background="@drawable/r9"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <EditText
        android:id="@+id/kilo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:hint="Kilonuz..."
        android:inputType="text"
        android:textColor="#000000">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/boy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:ems="10"
        android:hint="Boyunuz..."
        android:inputType="text"
        android:textColor="#000000">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/yas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="216dp"
        android:ems="10"
        android:hint="Yaşınız..."
        android:inputType="text"
        android:textColor="#000000">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/textsonuc"
        android:layout_width="match_parent"
        android:layout_height="59dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:background="#ccaf65"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <Button
        android:id="@+id/kalorisonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:layout_weight="0.52"
        android:background="#ccaf65"
        android:text="HESAPLA" />

    <RadioGroup
        android:id="@+id/Cinsiyet_radiogrup"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp">

        <RadioButton
            android:id="@+id/Erkek_radiobuton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Erkek" />

        <RadioButton
            android:id="@+id/Bayan_radiobuton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bayan" />
    </RadioGroup>

</RelativeLayout>
